{
  "name": "WebSearch MCP - Python Integration", 
  "description": "Python-based MCP client configuration for direct server execution",
  "mcpServers": {
    "websearch": {
      "command": "python",
      "args": ["services/mcp/server.py"],
      "cwd": "D:/src/websearch_mcp",
      "env": {
        "SEARXNG_URL": "http://localhost:8080",
        "EXTRACTOR_URL": "http://localhost:8055",
        "REDIS_URL": "redis://localhost:6379",
        "RATE_LIMIT_PER_DOMAIN": "2",
        "CACHE_TTL": "3600",
        "USE_DISTRIBUTED_RATE_LIMIT": "false",
        "MAX_CONCURRENT_REQUESTS": "5",
        "PYTHONPATH": "services/mcp"
      }
    }
  },
  "requirements": {
    "services": [
      "Redis server running on localhost:6379",
      "SearXNG service on localhost:8080", 
      "Content Extractor service on localhost:8055"
    ],
    "python_packages": [
      "fastmcp",
      "httpx",
      "redis[hiredis]",
      "pydantic"
    ]
  },
  "setup_commands": [
    "docker-compose up -d redis searxng extractor",
    "pip install -r services/mcp/requirements.txt"
  ]
}