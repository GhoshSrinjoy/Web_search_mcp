# WebSearch MCP Configuration
# Copy this file to .env and modify as needed

# MCP Server Configuration
MCP_PORT=8001
SEARXNG_URL=http://searxng:8080
EXTRACTOR_URL=http://extractor:8055
REDIS_URL=redis://redis:6379
MAX_CONCURRENT_REQUESTS=5
RATE_LIMIT_PER_DOMAIN=2              # Requests per second per domain
CACHE_TTL=3600                       # Cache TTL in seconds (1 hour)
USE_DISTRIBUTED_RATE_LIMIT=false     # Enable Redis-based rate limiting for multi-instance setups

# Content Extractor Configuration  
EXTRACTOR_PORT=8055
MAX_CONTENT_LENGTH=10485760
REQUEST_TIMEOUT=30

# SearXNG Configuration
SEARXNG_PORT=8080
SEARXNG_BASE_URL=http://localhost:8080/

# Redis Configuration
# Redis runs with default settings, no auth required for local development
# For production, uncomment and set a secure password:
# REDIS_PASSWORD=your-secure-redis-password

# Security Configuration
SEARXNG_SECRET=your-secure-secret-key-here